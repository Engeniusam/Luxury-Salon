    <script>
        var menuBtn = document.getElementById("menuBtn");
        var sideNav = document.getElementById("sideNav");
        var menu = document.getElementById("menu");

        sideNav.style.right = "-250px";

        menuBtn.onclick = function () {
            if (sideNav.style.right == "-250px") {
                sideNav.style.right = "0";
                menu.src = "close.png"
            } else {
                sideNav.style.right = "-250px";
                menu.src = "menu.png"
            }
        }
        // All animations will take exactly 500ms
        var scroll = new SmoothScroll('a[href*="#"]', {
            speed: 1000,
            speedAsDuration: true
        });

        // timeslot picker
        flatpickr("#timepicker", {
            enableTime: true,
            noCalendar: true,
            dateFormat: "H:i",
            time_24hr: true,
            minTime: "09:00",
            maxTime: "17:00",
            minDuration: {
                hours: 4
            },
        });
        // typing effect animations
        var options = {
            strings: ['Welcome to Luxury Salon <%= user.name %> !', 'Unleash Your Style, Unleash Your Confidence.',
                'Book an appointment today.'
            ],
            typeSpeed: 80, // typing speed in milliseconds
            backSpeed: 40, // backspacing speed in milliseconds
            loop: true, // loop the animation
        };

        var typed = new Typed('#typing-element', options);


        var scheduler = new DayPilot.Scheduler("scheduler", {
            startDate: new DayPilot.Date(),
            viewMode: "Days",
            days: 7,
            timeHeaders: [{
                    groupBy: "Month",
                    format: "MMMM yyyy"
                },
