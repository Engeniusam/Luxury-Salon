            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
        }

        #banner {
            background: linear-gradient(rgba(0, 0, 0, 0.5), #A30A09), url(banner.jpeg);
            background-size: cover;
            background-position: center;
            height: 100vh;
            width: 100% !important;
        }

        .logo {
            width: 340px;
            position: absolute;
            top: 4%;
            left: 4%;
        }

        .banner-text {
            text-align: center;
            color: #fff;
